    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run debug",
            "name": "Run npm debug",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run dev",
            "name": "Run npm dev",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch pubVERSION",
            "program": "${workspaceFolder}/scripts/build.js",
            "args": [
                "--product=engine",
                "--release",
                "--publish"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}